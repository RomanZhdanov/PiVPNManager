@page
@model PiVPNManager.WebUI.Pages.Servers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Server[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Server[0].Host)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Server[0].LastHealthCheck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Server[0].Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Server[0].UnavailableSince)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Server) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Host)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastHealthCheck)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnavailableSince)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
